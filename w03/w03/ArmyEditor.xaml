<Window x:Class="w03.ArmyEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w03"
        mc:Ignorable="d"
        Title="ArmyEditor" Height="286" Width="317">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" DataContext="{Binding ElementName=Booth}">
            <Label Content="Power" Background="LightBlue" Padding="10"/>
            <TextBox Padding="10" Text="{Binding Actual.Power}"/>
            <Label Content="Vitality" Background="LightBlue" Padding="10"/>
            <TextBlock Padding="10"  Text="{Binding Actual.Vitality}"/>
            <Label Content="Cost" Background="LightBlue" Padding="10"/>
            <TextBlock Padding="10"  Text="{Binding Actual.Cost}"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Save"/>



    </Grid>
</Window>
